{% extends 'base.html.twig' %}

{% block title %}Détails sport{% endblock %}

{% block main_class %}sport-details{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 pb-3">
                <h2 class="title m-0">Les Équipes du sport : SPORT NAME</h2>
            </div>
        </div>
        <div class="row flex-lg-row-reverse">
            <div class="col-12 col-lg-3 mb-3">
                {% include('partials/_team_filters.html.twig') %}
            </div>
            <div class="col-12 col-lg-9">
                <div class="row g-3">
                    {% for i in 0..10 %}
                        <div class="col-12 col-md-6 col-lg-4">
                            {% include('partials/_team_card.html.twig') %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
