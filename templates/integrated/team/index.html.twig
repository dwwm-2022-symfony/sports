{% extends 'base.html.twig' %}

{% block title %}Les équipes{% endblock %}

{% block main_class %}teams-index{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 d-flex align-items-center pb-3">
                <h2 class="title m-0">Les équipes</h2>
                <a href="#" class="ms-3 text-decoration-underline">Ajouter une équipe</a>
            </div>
        </div>
        <div class="row flex-lg-row-reverse">
            <div class="col-12 col-lg-3 mb-3">
                {% include('partials/_team_filters.html.twig') %}
            </div>
            <div class="col-12 col-lg-9">
                <div class="row g-3">
                    {% for i in 0..10 %}
                        <div class="col-12 col-md-6 col-lg-4">
                            {% include('partials/_team_card.html.twig') %}
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
